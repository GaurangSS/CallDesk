 <div class="app app-header-fixed ">

<div class="container w-xxl w-auto-xs">
  <div style="text-align:center">
  <img src="img/logo2.png" alt="." width="190" height="60" >
  </div>
  <div class="m-b-lg">  
     <form class="form-inline" role="form" action="/login" method="post">
      <% if(data.error!= '' && data.error!=undefined){ %>
        <div class="text-danger text-center">
          <strong ><%= data.error %></strong>
        </div>
      <% } %>
      <div class="text-danger wrapper text-center" ng-show="authError"></div>

      <div class="list-group list-group-sm">
        <div class="list-group-item">
          <input type="email" name="email"  placeholder="Email" class="form-control no-border" ng-model="user.email" required>
        </div>
        <div class="list-group-item">
           <input type="password"   name="password"  placeholder="Password" class="form-control no-border" ng-model="user.password" required>
        </div>
      </div>
      <button type="submit" class="btn btn-lg btn-primary btn-block" ng-click="login()" ng-disabled='form.$invalid'>Log in</button>
      <div class="text-center m-t m-b"><a href="/forgotPassword" ui-sref="access.forgotpwd">Forgot password?</a></div>
      <div class="line line-dashed"></div>
      <p class="text-center"><small>Do not have an account?</small></p>
      <a href="/Signup" ui-sref="access.signup" class="btn btn-lg btn-default btn-block">Create an account</a>
    </form>
    <br>
    <div>
    <a href="http://calldesk.io" class="btn btn-lg btn-success btn-block" style="width: 160px; margin: 0px auto">Go to Home</a>
    </div>
  </div>
  <div class="text-center" ng-include="'tpl/blocks/page_footer.html'">
    <p>
  <small class="text-muted">&nbsp;<br></small> 
</p>
  </div>
</div>


</div>



